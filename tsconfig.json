{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2017",
    "module": "es2015",
    "declaration": true,
    "outDir": "dist-ts/",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "Node"
  },
  "exclude": [
    "node_modules/"
  ],
  "include": [
    "./src/**/*"
  ],
}